<section id="contacto" class="py-20 bg-neutral-950">
  <div class="container mx-auto px-6">
    <div class="max-w-xl mx-auto glass-effect rounded-2xl p-10 shadow-2xl border border-white/10 animate-on-scroll">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-white">
        <span class="gradient-text">¿Tienes un proyecto en mente? ¡Hablemos!</span>
      </h2>
      <!-- Contact icons section -->
      <div class="flex justify-center gap-8 mb-8">
        <a href="https://wa.me/1234567890" target="_blank" rel="noopener" class="flex items-center gap-2 text-green-500 hover:text-green-600 transition">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" width="28" height="28" viewBox="0 0 24 24"><path d="M12.004 2c-5.514 0-9.999 4.486-9.999 10 0 1.762.463 3.484 1.343 5.001l-1.342 5.001 5.163-1.357c1.457.797 3.104 1.355 4.835 1.355 5.514 0 9.999-4.486 9.999-10s-4.485-10-9.999-10zm0 18.333c-1.574 0-3.112-.417-4.453-1.206l-.319-.187-3.065.806.819-3.051-.208-.326c-.823-1.292-1.253-2.771-1.253-4.269 0-4.411 3.589-8 8.001-8 4.411 0 8 3.589 8 8 0 4.411-3.589 8-8 8zm4.602-6.197c-.252-.126-1.491-.734-1.721-.818-.23-.084-.397-.126-.565.126-.168.252-.648.818-.795.986-.147.168-.293.189-.545.063-.252-.126-1.065-.393-2.029-1.251-.75-.668-1.257-1.492-1.404-1.744-.147-.252-.016-.389.111-.515.114-.113.252-.294.378-.441.126-.147.168-.252.252-.42.084-.168.042-.315-.021-.441-.063-.126-.565-1.365-.773-1.872-.204-.491-.412-.424-.565-.432l-.48-.009c-.168 0-.441.063-.672.294-.231.231-.882.861-.882 2.099 0 1.238.904 2.437 1.03 2.606.126.168 1.779 2.719 4.317 3.703.604.207 1.075.331 1.443.424.606.154 1.158.132 1.594.08.486-.058 1.491-.609 1.703-1.197.21-.588.21-1.092.147-1.197-.063-.105-.231-.168-.483-.294z"/></svg>
          <span class="text-white font-medium">+34 609 92 57 61</span>
        </a>
        <a href="mailto:random.email@example.com" class="flex items-center gap-2 text-blue-400 hover:text-blue-500 transition">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" width="28" height="28" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 2v.01L12 13 4 6.01V6h16zm0 12H4V8.99l8 6.99 8-6.99V18z"/></svg>
          <span class="text-white font-medium">milovocker.clase@gmail.com</span>
        </a>
      </div>
      <form class="space-y-6">
        <div>
          <label for="name" class="block text-zinc-200 mb-2 font-medium">Nombre</label>
          <input type="text" id="name" name="name" required class="w-full px-4 py-3 rounded-lg bg-neutral-900 text-white border border-white/10 focus:outline-none focus:ring-2 focus:ring-indigo-600 transition" />
        </div>
        <div>
          <label for="email" class="block text-zinc-200 mb-2 font-medium">Email</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-lg bg-neutral-900 text-white border border-white/10 focus:outline-none focus:ring-2 focus:ring-indigo-600 transition" />
        </div>
        <div>
          <label for="message" class="block text-zinc-200 mb-2 font-medium">Mensaje</label>
          <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 rounded-lg bg-neutral-900 text-white border border-white/10 focus:outline-none focus:ring-2 focus:ring-indigo-600 transition"></textarea>
        </div>
        <button type="submit" class="w-full bg-gradient-to-r from-indigo-600 to-blue-500 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-blue-600 transition-all duration-300 shadow-lg hover:shadow-xl">
          Enviar mensaje
        </button>
      </form>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector('form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const name = formData.get('name');
    const email = formData.get('email');
    const subject = formData.get('subject');
    const message = formData.get('message');
    
    const mailtoLink = `mailto:milovocker.clase@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(`Nombre: ${name}\nEmail: ${email}\n\nMensaje:\n${message}`)}`;
    
    window.location.href = mailtoLink;
  });
</script>