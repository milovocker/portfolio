<script>
  // Traducciones
  const translations = {
    es: { about: 'Sobre mÃ­', skills: 'Habilidades', contact: 'Contacto' },
    en: { about: 'About', skills: 'Skills', contact: 'Contact' },
    fr: { about: 'Ã€ propos', skills: 'CompÃ©tences', contact: 'Contact' },
    de: { about: 'Ãœber mich', skills: 'FÃ¤higkeiten', contact: 'Kontakt' }
  };

  function setLang(lang) {
    document.getElementById('nav-about').textContent = translations[lang].about;
    document.getElementById('nav-skills').textContent = translations[lang].skills;
    document.getElementById('nav-contact').textContent = translations[lang].contact;
    document.getElementById('lang-select').value = lang;

    // Mobile
    document.getElementById('nav-about-mobile').textContent = translations[lang].about;
    document.getElementById('nav-skills-mobile').textContent = translations[lang].skills;
    document.getElementById('nav-contact-mobile').textContent = translations[lang].contact;
    document.getElementById('lang-select-mobile').value = lang;
  }

  let lang = localStorage.getItem('lang') || 'es';
  setLang(lang);

  document.getElementById('lang-select').addEventListener('change', function(e) {
    lang = e.target.value;
    localStorage.setItem('lang', lang);
    setLang(lang);
  });
  document.getElementById('lang-select-mobile').addEventListener('change', function(e) {
    lang = e.target.value;
    localStorage.setItem('lang', lang);
    setLang(lang);
  });

  // Mobile menu toggle
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  menuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>