---
const possibilities = [
  {
    name: 'Webs Corporativas',
    description: 'Sitios web profesionales para empresas, con información, servicios y contacto.',
    icon: 'corporate.svg'
  },
  {
    name: 'Landing Pages',
    description: 'Páginas de aterrizaje optimizadas para campañas de marketing y captación de clientes.',
    icon: 'landing.svg'
  },
  {
    name: 'Blogs y Portafolios',
    description: 'Plataformas para compartir contenido, mostrar trabajos y atraer oportunidades.',
    icon: 'blog.svg'
  },
  {
    name: 'Reservas y Citas Online',
    description: 'Sistemas para gestionar reservas, citas y agendas de manera eficiente.',
    icon: 'calendar.svg'
  },
  {
    name: 'Catálogos Digitales',
    description: 'Presentación interactiva de productos y servicios en formato digital.',
    icon: 'catalog.svg'
  }
];

// <img src={`/svgs/${item.icon}`} alt={`${item.name} icon`} class="w-12 h-12" />
---

<section id="habilidades" class="py-20 bg-neutral-950">
  <div class="container mx-auto px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 animate-on-scroll text-white">
        Mis <span class="gradient-text">posibilidades</span>
      </h2>
      <div class="grid md:grid-cols-2 gap-8">
        {possibilities.map((item) => (
          <div class="animate-on-scroll glass-effect rounded-2xl p-8 shadow-lg flex gap-6 items-start">
            <div>
              <h3 class="text-2xl font-bold mb-2 text-white">{item.name}</h3>
              <p class="text-zinc-200">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
