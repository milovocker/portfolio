---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Milo Vocker - Próximamente">
  <div class="min-h-screen flex items-center justify-center relative overflow-hidden bg-gradient-to-br from-primary-50 to-blue-50">
    <!-- Background decoration -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-20 left-10 w-72 h-72 bg-primary-200 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-float"></div>
      <div class="absolute top-40 right-10 w-72 h-72 bg-blue-200 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-20 left-1/2 w-72 h-72 bg-purple-200 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-float" style="animation-delay: 4s;"></div>
    </div>

    <div class="container mx-auto px-6 text-center">
      <div class="max-w-4xl mx-auto">
        <!-- Logo/Nombre -->
        <div class="mb-8">
          <h1 class="text-6xl md:text-8xl font-bold gradient-text mb-4">
            Milo Vocker
          </h1>
          <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-blue-500 mx-auto rounded-full"></div>
        </div>

        <!-- Mensaje principal -->
        <div class="mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-dark-800 mb-6">
            Algo increíble está en camino
          </h2>
          <p class="text-xl md:text-2xl text-dark-600 leading-relaxed max-w-3xl mx-auto">
            Estoy trabajando en mi nuevo portfolio para mostrarte mejor mis servicios de desarrollo web. 
            Mientras tanto, puedes contactarme directamente.
          </p>
        </div>

        <!-- Información de contacto -->
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-xl mb-12 max-w-2xl mx-auto">
          <h3 class="text-2xl font-bold text-dark-800 mb-6">¿Tienes un proyecto en mente?</h3>
          
          <div class="grid md:grid-cols-2 gap-6">
            <a 
              href="mailto:milovocker.clase@gmail.com"
              class="flex items-center justify-center gap-3 bg-primary-600 text-white px-6 py-4 rounded-lg hover:bg-primary-700 transition-all duration-300 transform hover:scale-105 shadow-lg"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Enviar Email
            </a>
            
            <a 
              href="https://wa.me/34609925761"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-3 bg-green-600 text-white px-6 py-4 rounded-lg hover:bg-green-700 transition-all duration-300 transform hover:scale-105 shadow-lg"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.52 3.49C18.29 1.25 15.26 0 12.1 0 5.55 0 .22 5.33.21 11.89c-.002 2.09.55 4.14 1.59 5.95l-1.69 6.16 6.3-1.65c1.74.95 3.7 1.45 5.69 1.45h.01c6.55 0 11.88-5.33 11.89-11.89.01-3.16-1.24-6.19-3.48-8.41zm-8.42 18.29h-.01c-1.77 0-3.51-.48-5.03-1.38l-.36-.21-3.74.98 1-3.65-.24-.37c-.99-1.57-1.51-3.39-1.51-5.25C2.22 6.44 6.66 2.01 12.11 2.01c2.62.01 5.13 1.05 6.98 2.91 1.85 1.85 2.89 4.36 2.89 6.99-.01 5.45-4.44 9.88-9.88 9.88zm5.42-7.4c-.3-.15-1.76-.87-2.03-.97-.27-.1-.47-.15-.67.15-.2.3-.77.97-.94 1.17-.17.2-.34.22-.64.07-.29-.15-1.25-.46-2.39-1.46-.88-.79-1.48-1.76-1.65-2.04-.17-.28-.02-.44.13-.59.13-.13.29-.34.44-.52.15-.18.2-.3.28-.47.08-.17.03-.34-.05-.48-.08-.14-.67-1.46-.91-2.05-.24-.58-.48-.53-.66-.54-.17-.01-.37-.01-.57-.01-.3.01-.59.14-.79.37-.27.3-1.04 1.02-1.04 2.48 0 1.45 1.06 2.86 1.21 3.05.15.19 2.09 3.03 5.07 4.31.55.24 1.12.44 1.69.62.71.23 1.36.19 1.87.12.57-.08 1.76-.71 2.01-1.39.25-.68.25-1.27.18-1.39-.07-.12-.27-.19-.57-.34z"/>
              </svg>
              WhatsApp
            </a>
          </div>
          
          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-dark-600">
              <strong>Teléfono:</strong> +34 609 92 57 61
            </p>
          </div>
        </div>

        <!-- Servicios rápidos -->
        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <div class="bg-white/60 backdrop-blur-sm rounded-xl p-6 shadow-lg">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark-800 mb-2">Webs Corporativas</h4>
            <p class="text-dark-600 text-sm">Desde 300€</p>
          </div>
          
          <div class="bg-white/60 backdrop-blur-sm rounded-xl p-6 shadow-lg">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark-800 mb-2">Aplicaciones Web</h4>
            <p class="text-dark-600 text-sm">Desde 750€</p>
          </div>
          
          <div class="bg-white/60 backdrop-blur-sm rounded-xl p-6 shadow-lg">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark-800 mb-2">Asesoría</h4>
            <p class="text-dark-600 text-sm">Consulta gratuita</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { gsap } from 'gsap';
    
    // Animación de entrada
    gsap.from('h1', {
      duration: 1.2,
      y: 50,
      opacity: 0,
      ease: 'power3.out'
    });
    
    gsap.from('h2', {
      duration: 1,
      y: 30,
      opacity: 0,
      ease: 'power2.out',
      delay: 0.3
    });
    
    gsap.from('p', {
      duration: 0.8,
      y: 20,
      opacity: 0,
      ease: 'power2.out',
      delay: 0.5
    });
    
    gsap.from('.bg-white\\/80', {
      duration: 0.8,
      y: 30,
      opacity: 0,
      ease: 'power2.out',
      delay: 0.7
    });
    
    gsap.from('.grid > div', {
      duration: 0.6,
      y: 20,
      opacity: 0,
      ease: 'power2.out',
      delay: 0.9,
      stagger: 0.1
    });
  </script>
</Layout>